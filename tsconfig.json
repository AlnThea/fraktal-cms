{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "types": ["vite/client"],
        "typeRoots": [
            "./resources/js/Types/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "resources/js",
        "vite.config.ts",

    ]
}
